# Authentication
# Generate a secure value with: openssl rand -hex 32
AUTH_SECRET=your_secure_random_secret_here

# Database Configuration
# Get DATABASE_URL from your database provider (Neon, Vercel Postgres, etc.)
DATABASE_URL=postgresql://username:password@host:5432/database?sslmode=require

# Database Unpooled Connection (if required)
DATABASE_URL_UNPOOLED=postgresql://username:password@host:5432/database?sslmode=require

# PostgreSQL Connection Parameters (for Neon/Vercel)
PGHOST=your-database-host.c-3.us-east-1.aws.neon.tech
PGHOST_UNPOOLED=your-database-host-unpooled.c-3.us-east-1.aws.neon.tech
PGUSER=your_username
PGDATABASE=your_database_name
PGPASSWORD=your_secure_password

# Vercel Postgres (alternative format)
POSTGRES_URL=postgresql://username:password@host:5432/database?sslmode=require
POSTGRES_URL_NON_POOLING=postgresql://username:password@host:5432/database?sslmode=require
POSTGRES_USER=your_username
POSTGRES_HOST=your-database-host
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DATABASE=your_database_name
POSTGRES_URL_NO_SSL=postgresql://username:password@host:5432/database
